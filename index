<script>
(function() {
  // قائمة السور
  const surahList = [
    { id: 1, name: 'الفاتحة' },
    { id: 36, name: 'يس' },
    { id: 67, name: 'تبارك' },
    { id: 55, name: 'الرحمن' },
    { id: 18, name: 'الكهف' },
    { id: 112, name: 'الإخلاص' },
    { id: 113, name: 'الفلق' },
    { id: 114, name: 'الناس' }
  ];

  // عناصر DOM
  const suraContainer = document.getElementById('suraList');
  const qariSelect = document.getElementById('qariSelect');
  const audioPlayer = document.getElementById('audioPlayer');
  const trackInfo = document.getElementById('trackInfo');
  const suraDisplay = document.getElementById('suraDisplay');

  let currentSura = 1;
  let currentSuraName = 'الفاتحة';

  // دالة لإنشاء أزرار السور
  function renderSurahButtons() {
    suraContainer.innerHTML = '';
    surahList.forEach(s => {
      const btn = document.createElement('button');
      btn.className = 'sura-btn' + (s.id === currentSura ? ' active' : '');
      btn.textContent = s.name;
      btn.dataset.id = s.id;
      btn.dataset.name = s.name;
      btn.addEventListener('click', function() {
        document.querySelectorAll('.sura-btn').forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        currentSura = parseInt(this.dataset.id);
        currentSuraName = this.dataset.name;
        updateAudioSource();
        updateSuraDisplay(currentSura);
      });
      suraContainer.appendChild(btn);
    });
  }

  // تحديث مصدر الصوت بناءً على القارئ ورقم السورة
  function updateAudioSource() {
    const qari = qariSelect.value; // قيمة القارئ
    const sura = currentSura;
    // رابط mp3quran.net الموثوق
    let audioUrl = '';
    if (qari === 'abdulbasit') {
      audioUrl = `https://server8.mp3quran.net/abdulbasit/${sura.toString().padStart(3, '0')}.mp3`;
    } else if (qari === 'husary') {
      audioUrl = `https://server8.mp3quran.net/husary/${sura.toString().padStart(3, '0')}.mp3`;
    } else if (qari === 'minshawi') {
      audioUrl = `https://server8.mp3quran.net/minshawi/${sura.toString().padStart(3, '0')}.mp3`;
    } else if (qari === 'maher') {
      audioUrl = `https://server8.mp3quran.net/maher/${sura.toString().padStart(3, '0')}.mp3`;
    } else if (qari === 'afasy') {
      audioUrl = `https://server8.mp3quran.net/afasy/${sura.toString().padStart(3, '0')}.mp3`;
    }
    
    audioPlayer.src = audioUrl;
    audioPlayer.load();
    trackInfo.innerHTML = `السورة: ${currentSuraName} | القارئ: ${qariSelect.selectedOptions[0].text}`;
  }

  // عرض نص السورة
  function updateSuraDisplay(suraId) {
    let text = '';
    if (suraId === 1) {
      text = '<p>بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ<br>الْحَمْدُ لِلَّهِ رَبِّ الْعَالَمِينَ<br>الرَّحْمَٰنِ الرَّحِيمِ<br>مَالِكِ يَوْمِ الدِّينِ<br>إِيَّاكَ نَعْبُدُ وَإِيَّاكَ نَسْتَعِينُ<br>اهْدِنَا الصِّرَاطَ الْمُسْتَقِيمَ<br>صِرَاطَ الَّذِينَ أَنْعَمْتَ عَلَيْهِمْ غَيْرِ الْمَغْضُوبِ عَلَيْهِمْ وَلَا الضَّالِّينَ</p>';
    } else if (suraId === 112) {
      text = '<p>بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ<br>قُلْ هُوَ اللَّهُ أَحَدٌ<br>اللَّهُ الصَّمَدُ<br>لَمْ يَلِدْ وَلَمْ يُولَدْ<br>وَلَمْ يَكُنْ لَهُ كُفُوًا أَحَدٌ</p>';
    } else if (suraId === 36) {
      text = '<p>بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ<br>يسٓ (١) وَٱلۡقُرۡءَانِ ٱلۡحَكِيمِ (٢) إِنَّكَ لَمِنَ ٱلۡمُرۡسَلِينَ (٣) عَلَىٰ صِرَٰطٖ مُّسۡتَقِيمٖ (٤) تَنزِيلَ ٱلۡعَزِيزِ ٱلرَّحِيمِ (٥) ...</p>';
    } else {
      text = `<p style="color: #345e34;">سورة ${currentSuraName} - استمع إلى التلاوة المباركة.</p>`;
    }
    suraDisplay.innerHTML = text;
  }

  // أحداث
  qariSelect.addEventListener('change', updateAudioSource);
  audioPlayer.addEventListener('error', function() {
    trackInfo.innerHTML = '⚠️ تعذر تحميل التلاوة. جرب قارئاً آخر أو تأكد من اتصالك.';
  });

  // بدء التشغيل
  renderSurahButtons();
  updateAudioSource();
  updateSuraDisplay(1);

  // تفعيل الزر الأول
  document.querySelectorAll('.sura-btn').forEach(btn => {
    if (btn.dataset.id == 1) btn.classList.add('active');
  });
})();
</script>
</body>
</html>
