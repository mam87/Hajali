<script>
  (function() {
    // تعريف السور (رقم السورة واسمها)
    const surahList = [
      { id: 1, name: 'الفاتحة' },
      { id: 36, name: 'يس' },
      { id: 67, name: 'تبارك' },
      { id: 55, name: 'الرحمن' },
      { id: 18, name: 'الكهف' },
      { id: 112, name: 'الإخلاص' },
      { id: 113, name: 'الفلق' },
      { id: 114, name: 'الناس' }
    ];

    // عناصر DOM
    const suraContainer = document.getElementById('suraList');
    const qariSelect = document.getElementById('qariSelect');
    const videoPlayer = document.getElementById('videoPlayer');
    const trackInfo = document.getElementById('trackInfo');
    const suraDisplay = document.getElementById('suraDisplay');

    let currentSura = 1;       // الفاتحة افتراضياً
    let currentSuraName = 'الفاتحة';

    // إنشاء أزرار السور
    function renderSurahButtons() {
      suraContainer.innerHTML = '';
      surahList.forEach(s => {
        const btn = document.createElement('button');
        btn.className = 'sura-btn' + (s.id === currentSura ? ' active' : '');
        btn.textContent = s.name;
        btn.dataset.id = s.id;
        btn.dataset.name = s.name;
        btn.addEventListener('click', function() {
          document.querySelectorAll('.sura-btn').forEach(b => b.classList.remove('active'));
          this.classList.add('active');
          currentSura = parseInt(this.dataset.id);
          currentSuraName = this.dataset.name;
          updateVideoSource();
          updateSuraDisplay(currentSura);
        });
        suraContainer.appendChild(btn);
      });
    }

    // --- تحديث مصدر الفيديو باستخدام API الجديد ---
    async function updateVideoSource() {
      const recitationId = qariSelect.value;
      const suraNumber = currentSura;
      const qariName = qariSelect.selectedOptions[0].text;

      // عرض رسالة تحميل
      trackInfo.innerHTML = `<i class="fas fa-spinner fa-spin"></i> جاري تحميل التلاوة...`;

      // بناء رابط API
      const apiUrl = `https://api.quran.com/api/v4/chapter_recitations/${recitationId}/${suraNumber}`;

      try {
        const response = await fetch(apiUrl);
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        const data = await response.json();
        
        // الحصول على رابط الصوت من الاستجابة
        const audioUrl = data.audio_file;

        if (audioUrl) {
          videoPlayer.src = audioUrl;
          videoPlayer.load();
          trackInfo.innerHTML = `السورة: ${currentSuraName} | القارئ: ${qariName}`;
        } else {
          throw new Error('لم يتم العثور على رابط الصوت.');
        }

      } catch (error) {
        console.error("Failed to fetch audio:", error);
        trackInfo.innerHTML = `⚠️ تعذر تحميل التلاوة. يرجى المحاولة مرة أخرى.`;
      }
    }

    // عرض نص السورة
    function updateSuraDisplay(suraId) {
      let text = '';
      if (suraId === 1) {
        text = '<p>بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ<br>الْحَمْدُ لِلَّهِ رَبِّ الْعَالَمِينَ<br>الرَّحْمَٰنِ الرَّحِيمِ<br>مَالِكِ يَوْمِ الدِّينِ<br>إِيَّاكَ نَعْبُدُ وَإِيَّاكَ نَسْتَعِينُ<br>اهْدِنَا الصِّرَاطَ الْمُسْتَقِيمَ<br>صِرَاطَ الَّذِينَ أَنْعَمْتَ عَلَيْهِمْ غَيْرِ الْمَغْضُوبِ عَلَيْهِمْ وَلَا الضَّالِّينَ</p>';
      } else if (suraId === 112) {
        text = '<p>بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ<br>قُلْ هُوَ اللَّهُ أَحَدٌ<br>اللَّهُ الصَّمَدُ<br>لَمْ يَلِدْ وَلَمْ يُولَدْ<br>وَلَمْ يَكُنْ لَهُ كُفُوًا أَحَدٌ</p>';
      } else if (suraId === 36) {
        text = '<p>بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ<br>يسٓ (١) وَٱلۡقُرۡءَانِ ٱلۡحَكِيمِ (٢) إِنَّكَ لَمِنَ ٱلۡمُرۡسَلِينَ (٣) عَلَىٰ صِرَٰطٖ مُّسۡتَقِيمٖ (٤) تَنزِيلَ ٱلۡعَزِيزِ ٱلرَّحِيمِ (٥) ...</p><p style="color: #3f6b4b;">(اضغط على زر التشغيل لسماع التلاوة)</p>';
      } else {
        text = `<p style="color: #345e34;">سورة ${currentSuraName} - استمع إلى التلاوة المباركة.</p>`;
      }
      suraDisplay.innerHTML = text;
    }

    // عند تغيير القارئ
    qariSelect.addEventListener('change', function() {
      updateVideoSource();
    });

    // التهيئة عند تحميل الصفحة
    document.addEventListener('DOMContentLoaded', function() {
      renderSurahButtons();
      // تعيين السورة الافتراضية نشطة
      document.querySelector('.sura-btn[data-id="1"]').classList.add('active');
      // تحميل التلاوة الأولى
      updateVideoSource();
      updateSuraDisplay(1);
    });

  })();
</script>

</body>
</html>
